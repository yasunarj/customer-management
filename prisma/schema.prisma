generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id           Int           @id @default(autoincrement())
  name         String
  phone        String?
  reservations Reservation[]
}

model Reservation {
  id              Int       @id @default(autoincrement())
  productName     String
  price           Int
  reservationDate DateTime
  deliveryDate    DateTime?
  customerId      Int
  type            String
  customer        Customer  @relation(fields: [customerId], references: [id])
}

model SafeCheck {
  id        Int      @id @default(autoincrement())
  date      DateTime @unique
  bara      Int
  yen10000  Int
  yen5000   Int
  yen1000   Int
  yen500    Int
  yen100    Int
  yen50     Int
  yen10     Int
  yen5      Int
  yen1      Int
  total     Int
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model ProductExpiry {
  id          Int       @id @default(autoincrement())
  gondolaNo   Int
  category    String
  productName String
  expiryDate  DateTime  @db.Date
  quantity    Int       @default(1)
  manager     String    
  createdAt   DateTime  @default(now())
  updateAt    DateTime  @updatedAt
  @@index([expiryDate])
  @@map("product_expiry")
}

model DailyTask {
  id        String   @id @default(cuid())
  title     String   @unique
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)

  onMon     Boolean  @default(true)
  onTue     Boolean  @default(true)
  onWed     Boolean  @default(true)
  onThu     Boolean  @default(true)
  onFri     Boolean  @default(true)
  onSat     Boolean  @default(true)
  onSun     Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  checks DailyTaskCheck[]
}

model DailyTaskCheck {
  id        String   @id @default(cuid())
  date      String   // "YYYY-MM-DD"（JST）
  taskId    String
  task      DailyTask @relation(fields: [taskId], references: [id], onDelete: Cascade)

  checkedBy String?
  checkedAt DateTime @default(now())

  @@unique([date, taskId])
  @@index([date])
}
