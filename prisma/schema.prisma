generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id           Int           @id @default(autoincrement())
  name         String
  phone        String?
  reservations Reservation[]
}

model Reservation {
  id              Int       @id @default(autoincrement())
  productName     String
  price           Int
  reservationDate DateTime
  deliveryDate    DateTime?
  customerId      Int
  type            String
  customer        Customer  @relation(fields: [customerId], references: [id])
}

model SafeCheck {
  id        Int      @id @default(autoincrement())
  date      DateTime @unique
  bara      Int
  yen10000  Int
  yen5000   Int
  yen1000   Int
  yen500    Int
  yen100    Int
  yen50     Int
  yen10     Int
  yen5      Int
  yen1      Int
  total     Int
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model ProductExpiry {
  id          Int       @id @default(autoincrement())
  gondolaNo   Int
  category    String
  productName String
  expiryDate  DateTime  @db.Date
  quantity    Int       @default(1)
  manager     String    
  createdAt   DateTime  @default(now())
  updateAt    DateTime  @updatedAt
  @@index([expiryDate])
  @@map("product_expiry")
}
